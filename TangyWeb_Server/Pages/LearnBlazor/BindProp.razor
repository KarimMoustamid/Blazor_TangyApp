@page "/learnBlazor/bindProp"
<h3>Product</h3>

Name : @product.Name <br/>
Active : @product.IsActive <br/>

Price : @product.Price <br/> <br/>

Price ( One way Data Binding ) : <input type="number"  value="@product.Price"/> <br/> <br/>
@* Price ( Two way Data Binding ) : <input type="number"  @bind-value="@product.Price" @bind-value:event="oninput" /> *@
Price ( Two way Data Binding ) : <input type="number"  @bind="@product.Price" @bind:event="oninput" />



@code {

    Tangy_Models.LearnBlazorModels.Demo_Product product = new()
    {
       Id = 1,
       Name = "Rose Candle",
       IsActive = true,
       Price = 10.99
    };

}